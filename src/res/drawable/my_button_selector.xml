<!-- my_button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/colorAccent"/> <!-- Цвет при нажатии -->
    <item android:state_focused="true" android:color="@color/colorPrimaryDark"/> <!-- Цвет при фокусировке -->
    <item android:color="@color/colorPrimary"/> <!-- Обычный цвет -->
</selector>
<Button
    android:id="@+id/my_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/my_button_selector"
    android:text="Press Me"/>